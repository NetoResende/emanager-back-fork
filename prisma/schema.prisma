generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clientes {
  id       Int        @id @unique(map: "id") @default(autoincrement())
  nome     String     @db.VarChar(50)
  email    String     @db.VarChar(50)
  whatsapp String     @db.VarChar(20)
  licencas licencas[]
  pedidos  pedidos[]
}

model contas_digitais {
  id               Int        @id @unique(map: "id") @default(autoincrement())
  email            String     @db.VarChar(100)
  senha            String     @db.VarChar(255)
  store_id         String     @db.VarChar(50)
  autenticacao_2fa String     @db.VarChar(50)
  data_nascimento  DateTime   @db.Date
  licencas         licencas[]
}

model jogos {
  id            Int             @id @unique(map: "id") @default(autoincrement())
  nome          String          @db.VarChar(100)
  plataforma_id Int
  preco_full    Float           @default(0) @db.Float
  preco_promo   Float           @default(0) @db.Float
  plataformas   plataformas     @relation(fields: [plataforma_id], references: [id], onUpdate: Restrict, map: "jogos_fk2")
  licencas      licencas[]
  pedidos_jogos pedidos_jogos[]

  @@index([plataforma_id], map: "jogos_fk2")
}

model licencas {
  id               Int             @id @unique(map: "id") @default(autoincrement())
  prioridade       String          @db.VarChar(10)
  jogo_id          Int
  preco            Float           @db.Float
  conta_digital_id Int
  status           String          @db.VarChar(20)
  tipo             String          @db.VarChar(20)
  data_inicio      DateTime?       @db.Date
  data_fim         DateTime?       @db.Date
  cliente_id       Int?
  jogos            jogos           @relation(fields: [jogo_id], references: [id], onUpdate: Restrict, map: "licencas_fk2")
  contas_digitais  contas_digitais @relation(fields: [conta_digital_id], references: [id], onUpdate: Restrict, map: "licencas_fk4")
  clientes         clientes?       @relation(fields: [cliente_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "licencas_fk9")

  @@index([jogo_id], map: "licencas_fk2")
  @@index([conta_digital_id], map: "licencas_fk4")
  @@index([cliente_id], map: "licencas_fk9")
}

model niveis {
  id       Int        @id @unique(map: "id") @default(autoincrement())
  nome     String     @db.VarChar(50)
  usuarios usuarios[]
}

model plataformas {
  id    Int     @id @unique(map: "id") @default(autoincrement())
  nome  String  @db.VarChar(20)
  jogos jogos[]
}

model usuarios {
  id       Int    @id @unique(map: "id") @default(autoincrement())
  nome     String @db.VarChar(100)
  email    String @db.VarChar(100)
  senha    String @db.VarChar(255)
  nivel_id Int
  niveis   niveis @relation(fields: [nivel_id], references: [id], onUpdate: Restrict, map: "usuarios_fk4")

  @@index([nivel_id], map: "usuarios_fk4")
}

model pedidos {
  id            Int             @id @unique(map: "id") @default(autoincrement())
  data          DateTime        @default(now()) @db.DateTime(0)
  cliente_id    Int
  valor         Decimal         @db.Decimal(10, 0)
  status        String          @db.VarChar(20) @default("Pendente")
  clientes      clientes        @relation(fields: [cliente_id], references: [id], onUpdate: Restrict, map: "pedidos_fk2")
  pedidos_jogos pedidos_jogos[]
  transacoes    transacoes[]

  @@index([cliente_id], map: "pedidos_fk2")
}

model pedidos_jogos {
  id        Int     @id @unique(map: "id") @default(autoincrement())
  pedido_id Int
  jogo_id   Int
  pedidos   pedidos @relation(fields: [pedido_id], references: [id], onUpdate: Restrict, map: "pedidos_jogos_fk1")
  jogos     jogos   @relation(fields: [jogo_id], references: [id], onUpdate: Restrict, map: "pedidos_jogos_fk2")

  @@index([pedido_id], map: "pedidos_jogos_fk1")
  @@index([jogo_id], map: "pedidos_jogos_fk2")
}

model transacoes {
  id              Int      @id @unique(map: "id") @default(autoincrement())
  data            DateTime @default(now()) @db.DateTime(0)
  pedido_id       Int
  forma_pagamento String   @db.VarChar(20)
  pedidos         pedidos  @relation(fields: [pedido_id], references: [id], onUpdate: Restrict, map: "transacoes_fk2")

  @@index([pedido_id], map: "transacoes_fk2")
}
